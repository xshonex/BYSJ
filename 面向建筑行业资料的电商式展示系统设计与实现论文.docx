                {{ isCollected(course.id) ? '已收藏' : '收藏' }}
              </button>
              <button @click="viewDetail(course.id)" class="btn-detail">查看详情</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import { ref, onMounted } from 'vue'
import { useRouter } from 'vue-router'

export default {
  name: 'Home',
  setup() {
    const router = useRouter()
    const searchKeyword = ref('')
    const popularCourses = ref([])
    const latestCourses = ref([])
    const collectedCourses = ref([])
    
    onMounted(() => {
      // 加载模拟数据
      loadMockData()
      // 加载收藏课程
      loadCollectedCourses()
    })
    
    const loadMockData = () => {
      // 模拟数据，实际应从后端API获取
      popularCourses.value = [
        {
          id: 1,
          title: '建筑设计基础',
          description: '介绍建筑设计的基本原理和方法',
          cover: '/assets/images/course1.jpg'
        },
        {
          id: 2,
          title: '建筑结构分析',
          description: '详细讲解建筑结构的分析方法',
          cover: '/assets/images/course2.jpg'
        }
      ]
      
      latestCourses.value = [
        {
          id: 3,
          title: '绿色建筑技术',
          description: '探讨绿色建筑的设计理念和技术应用',
          cover: '/assets/images/course3.jpg'
        },
        {
          id: 4,
          title: 'BIM技术应用',
          description: '介绍BIM技术在建筑工程中的应用',
          cover: '/assets/images/course4.jpg'
        }
      ]
    }
    
    const loadCollectedCourses = () => {
      const stored = localStorage.getItem('collectedCourses')
      collectedCourses.value = stored ? JSON.parse(stored) : []
    }
    
    const isCollected = (courseId) => {
      return collectedCourses.value.some(course => course.id === courseId)
    }
    
    const collect = (course) => {
      if (isCollected(course.id)) {
        // 取消收藏
        collectedCourses.value = collectedCourses.value.filter(item => item.id !== course.id)
      } else {
        // 添加收藏
        collectedCourses.value.push(course)
      }
      // 保存到localStorage
      localStorage.setItem('collectedCourses', JSON.stringify(collectedCourses.value))
    }
    
    const viewDetail = (courseId) => {
      router.push(`/detail/${courseId}`)
    }
    
    const search = () => {
      router.push({ path: '/search', query: { keyword: searchKeyword.value } })
    }
    
    return {
      searchKeyword,
      popularCourses,
      latestCourses,
      isCollected,
      collect,
      viewDetail,
      search
    }
  }
}
</script>

